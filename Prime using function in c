#include<stdio.h>
int prime(int);
int main()
{
	int n,sum;
	printf("enter the number");
	scanf("%d",&n);
	sum=prime(n);
	if(sum==0)
	{
		printf("%d is not a prime number",n);
		
	}
	else
	printf("%d is a prime number",n);
    return 0;
}
int prime(int n)
{
	int i,c;
	for(i=2;i<=n/2;i++)
	{
		c=n%i;
		
	}
	return(c);
	
	
}
